<Window x:Class="IPZ_System_bus_tickets_sale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="Log in" Height="380" Width="320">
    <Grid Margin="0,0,-8,-1" Background="#FF7878F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="155*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Реєстрація" HorizontalAlignment="Left" Margin="3,292,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.96,2.5" Grid.Column="1" Click="Button_Click" Height="31"/>
        <Button Content="Вхід" HorizontalAlignment="Left" Margin="21,292,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="1.2,2.3" Grid.Column="2" Click="Button_Click_1" Height="31"/>
        <Label Content="  Логін :" HorizontalAlignment="Left" Margin="3,174,0,0" VerticalAlignment="Top" Width="60" Grid.Column="1"/>
        <Label Content="Пароль :" HorizontalAlignment="Left" Margin="3,233,0,0" VerticalAlignment="Top" Width="58" Grid.Column="1"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="101,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="3,79,0,0" VerticalAlignment="Top" Width="244" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Image Margin="48,70,96,194" Source="bus.png" Stretch="Fill" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Будь ласка, авторизуйтесь." HorizontalAlignment="Left" Margin="48,30,0,0" VerticalAlignment="Top" FontStyle="Italic" Grid.ColumnSpan="2" Grid.Column="1"/>
        <PasswordBox x:Name="passwordBox1" Grid.Column="1" HorizontalAlignment="Left" Margin="101,233,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="120" Height="26"/>
    </Grid>
</Window>
